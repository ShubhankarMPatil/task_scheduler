# Django
DEBUG=True
SECRET_KEY=your-secret-key
TIME_ZONE=Asia/Kolkata
LOG_LEVEL=INFO

# Comma-separated. Use "*" only for local dev.
ALLOWED_HOSTS=localhost,127.0.0.1

# When deploying behind HTTPS (Render + Vercel), configure trusted origins for CSRF.
# Example:
#   CSRF_TRUSTED_ORIGINS=https://your-frontend.vercel.app
CSRF_TRUSTED_ORIGINS=

# Database (optional). If omitted, defaults to SQLite (backend/db.sqlite3)
# Examples:
#   DATABASE_URL=postgresql://user:password@localhost:5432/dbname
#   DATABASE_URL=sqlite:///db.sqlite3
DATABASE_URL=

# CORS
# In DEBUG=True this defaults to True, but you can override here.
CORS_ALLOW_ALL_ORIGINS=True
# If CORS_ALLOW_ALL_ORIGINS=False, set allowed origins as comma-separated list:
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app
CORS_ALLOWED_ORIGINS=

# Usually not needed for token-less demo APIs.
CORS_ALLOW_CREDENTIALS=False
